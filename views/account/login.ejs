<% if (title) { %>
    <h1 id="login-title">
        <%= title %>
    </h1>
    <%- messages() %>
        <% } else { res.redirect('/') } %>
            <form id="loginForm" action="/account/login" method="post">
                <fieldset>
                    <div class="form-group" id="email-form">
                        <label for="account_email">Email:</label>
                        <input pattern="^[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.-]+\.[a-zA-Z]+$" type="email" id="account_email"
                            name="account_email" required>
                    </div>
                    <div class="form-group" id="password-form">
                        <label for="account_password">Password:</label>
                        <input pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*.\-_=+Â¨|\/]).{12,}$" type="password"
                            id="account_password" name="account_password" required placeholder="Enter a valid password">
                    </div>
                    <p id="password-requirements">Password must be minimum of 12 characters and include 1 capital
                        letter, 1 number and 1 special character.</p>
                    <button id="show-password" type="button">Show Password</button>
                    <button class="submit-button" id="login-button" type="submit">Login</button>
                    <p>No account? <a href="/account/registration">Sing-up</a></p>
                </fieldset>
            </form>
            <script src="/js/formUtils.js"></script>