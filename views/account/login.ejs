<% if (title) { %>
    <h1 id="login-title">
        <%= title %>
    </h1>
    <% messages() %>
        <% } else { res.redirect('/') } %>
            <form>
                <fieldset>
                    <div class="form-group" id="email-form">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group" id="password-form">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <p id="password-requirements">Password must be minimum of 12 characters and include 1 capital
                        letter, 1 number and 1 special character.</p>
                    <button id="login-button" type="submit">Login</button>
                    <p>No account? <a href="/account/registration">Sing-up</a></p>
                </fieldset>
            </form>
            <script src="/js/showPassword.js"></script>