<% if (title) { %>
    <h1 id="register-title">
        <%= title %>
    </h1>
    <% messages() %>
        <% } else { res.redirect('/') } %>
            <form action="/account/registration" method="post">
                <fieldset>
                    <div class="form-group" id="fname-form">
                        <label for="account_firstname">First Name:</label>
                        <input type="text" id="fname" name="account_firstname" required>
                    </div>
                    <div class="form-group" id="lname-form">
                        <label for="account_lastname">Last Name:</label>
                        <input type="text" id="lname" name="account_lastname" required>
                    </div>
                    <div class="form-group" id="email-form">
                        <label for="account_email">Email:</label>
                        <input type="email" id="email" name="account_email" required>
                    </div>
                    <div class="form-group" id="password-form">
                        <label for="account_password">Password:</label>
                        <input type="password" id="password" name="account_password" required>
                    </div>
                    <p id="password-requirements">Password must be minimum of 12 characters and include 1 capital
                        letter, 1 number and 1 special character.</p>
                    <button id="show-password" type="button">Show Password</button>
                    <button id="login-button" type="submit">Login</button>
                    <p>No account? <a href="/account/login">Sing-up</a></p>
                </fieldset>
            </form>
            <script src="/js/showPassword.js"></script>