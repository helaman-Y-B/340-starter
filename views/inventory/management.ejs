                        <a href="/inv/add-inventory">Add new inventory</a>
                    </div>
                    <div id="manage-items">
                        <h2>Update or delete an item.</h2>
                        <%- classificationList %>
                        <div id="list">
                            <table id="inventoryDisplay"></table>
