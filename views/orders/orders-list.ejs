<% if (title) { %>
    <h1 id="order-title">
        <%= title %>
    </h1>
    <%- messages() %>
        <% } else { res.redirect('/') } %>
            <% if (accountData.account_type === "Admin" || accountData.account_type === "Employee") { %>
                <div id="orders-list">
                    <% orders.forEach(order => { %>
                        <div class="order">
                            <h2>
                               Order Nro: <%= order.order_id %>
                            </h2>
                            <p>
                               From User Nro: <%= order.account_id %>
                            </p>
                            <p>
                                Order Date: <%= new Date(order.order_date).toLocaleDateString("en-US") %>
                            </p>
                            <p>
                                Car Identification Nro: <%= order.inv_id %>
                            </p>
                            <p>
                               Order Status: <%= order.order_status %>
                            </p>
                        </div>
                    <% }); %>
                </div>
                    <% } else { res.redirect('/') } %>